let numero;
let resultado;

function setup() {
createCanvas(400, 200);
numero = int(random(1, 101));
resultado =
verificarParOuÍmpar(numero);
}
fucntion draw() {
background(220);
textSize(20);
fill(0);
text("Número sorteado: "+ numero, 50, 80);
 text("É: " +resultado, 50, 120);
}

function verificarParOuÍmpar(n) {
if (n%2==0) {
 return "par";
} else}
 return "ímpar";
}
}
